<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="content" maxHeight="800.0" maxWidth="700.0" minHeight="800.0" minWidth="700.0"
            styleClass="background" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/"
            fx:controller="fi.metropolia.expensetracker.controller.ExpenseController">
    <children>
        <AnchorPane prefHeight="420.0" prefWidth="515.0" styleClass="secondBackground" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="400.0">
            <children>
                <ListView fx:id="expenseHistory" layoutX="-1.0" layoutY="84.0" opacity="0.85" prefHeight="345.0"
                          prefWidth="530.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="50.0"
                          AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0"/>
                <Label fx:id="history" alignment="CENTER" layoutX="106.0" layoutY="26.0" styleClass="titleText"
                       text="Expense history" textAlignment="CENTER" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <font>
                        <Font name="System Bold" size="36.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label fx:id="expenseTxt" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" styleClass="header"
               text="Expenses" textAlignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="10.0"/>
        <Button fx:id="back" mnemonicParsing="false" onAction="#backToMain" prefHeight="39.0" prefWidth="75.0"
                text="Back" textAlignment="CENTER" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="570.0"
                AnchorPane.topAnchor="15.0"/>
        <Label fx:id="active" alignment="CENTER" styleClass="budgetText" text="Active budget:"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Label fx:id="activeBudgetTxt" alignment="CENTER" styleClass="activeBudget" text="BUDGETNAME"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="450.0" AnchorPane.leftAnchor="10.0"
                    AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="130.0">
            <children>
                <Label fx:id="singleExpense" alignment="CENTER" styleClass="smallHeader" text="Add single expense"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0"/>
                <TextField fx:id="addExpense" layoutX="100.0" layoutY="7.0" onAction="#btnEnable" promptText="Amount:"
                           styleClass="button" AnchorPane.leftAnchor="55.0" AnchorPane.rightAnchor="55.0"
                           AnchorPane.topAnchor="40.0"/>
                <Button fx:id="addBtn" alignment="CENTER" disable="true" layoutX="137.0" layoutY="147.0"
                        mnemonicParsing="false" onAction="#onExpenseAddClick" text="Add" AnchorPane.leftAnchor="80.0"
                        AnchorPane.rightAnchor="80.0" AnchorPane.topAnchor="185.0"/>
                <ComboBox fx:id="selectTopic" layoutX="80.0" layoutY="59.0" onAction="#btnEnable" prefWidth="150.0"
                          promptText="Category" styleClass="button" AnchorPane.leftAnchor="30.0"
                          AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="87.0"/>
                <DatePicker fx:id="selectedDate" layoutX="74.0" layoutY="109.0" styleClass="button"
                            AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="135.0"/>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="379.0" layoutY="136.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.leftAnchor="400.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="130.0">
            <children>
                <Label fx:id="constantExpense" alignment="CENTER" styleClass="smallHeader" text="Add constant expense"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0"/>
                <ComboBox fx:id="selectCategory" layoutX="80.0" layoutY="59.0" onAction="#selectConst" prefWidth="150.0"
                          promptText="Expense" styleClass="button" AnchorPane.leftAnchor="30.0"
                          AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="40.0"/>
                <TextField fx:id="constExpenseName" layoutX="100.0" layoutY="7.0" promptText="Name:" styleClass="button"
                           visible="false" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"
                           AnchorPane.topAnchor="88.0"/>
                <TextField fx:id="constExpense" layoutX="100.0" layoutY="7.0" promptText="Amount:" styleClass="button"
                           AnchorPane.leftAnchor="55.0" AnchorPane.rightAnchor="55.0" AnchorPane.topAnchor="135.0"/>
                <Button fx:id="setBtn" alignment="CENTER" layoutX="137.0" layoutY="147.0" mnemonicParsing="false"
                        onAction="#setConstExpense" text="Set" AnchorPane.leftAnchor="90.0"
                        AnchorPane.rightAnchor="90.0" AnchorPane.topAnchor="185.0"/>
            </children>
        </AnchorPane>
        <Button fx:id="statisticBtn" layoutX="206.0" layoutY="369.0" mnemonicParsing="false"
                onAction="#toExpenseStatistics" text="Statistics" AnchorPane.leftAnchor="260.0"
                AnchorPane.rightAnchor="260.0" AnchorPane.topAnchor="350.0"/>
    </children>
</AnchorPane>
