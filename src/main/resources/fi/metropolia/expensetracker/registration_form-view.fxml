    <Label alignment="CENTER" layoutX="86.0" layoutY="74.0" prefHeight="74.0" prefWidth="426.0" styleClass="header"
           text="Expense Tracker" textAlignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
           AnchorPane.topAnchor="10.0"/>
    <!-- Add Header Label -->
    <Label alignment="CENTER" layoutX="196.0" layoutY="201.0" styleClass="budgetText" text="Registration:"
           AnchorPane.leftAnchor="107.0" AnchorPane.rightAnchor="107.0" AnchorPane.topAnchor="150.0"/>
    <Label alignment="CENTER" layoutX="198.0" layoutY="229.0" styleClass="smallHeader" text="Username:"
           AnchorPane.leftAnchor="107.0" AnchorPane.rightAnchor="107.0" AnchorPane.topAnchor="200.0"/>
    <TextField fx:id="userName" layoutX="200.0" layoutY="260.0" styleClass="button" AnchorPane.leftAnchor="200.0"
               AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="225.0"/>
    <Label alignment="CENTER" layoutX="200.0" layoutY="362.0" styleClass="smallHeader" text="Password:"
           AnchorPane.leftAnchor="107.0" AnchorPane.rightAnchor="107.0" AnchorPane.topAnchor="270.0"/>
    <PasswordField fx:id="passwordField" layoutX="200.0" layoutY="387.0" styleClass="button"
                   AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="295.0"/>
    <Button fx:id="submitButton" layoutX="214.0" layoutY="440.0" onAction="#register" text="Sign up"
