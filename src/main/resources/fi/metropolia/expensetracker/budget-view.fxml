<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="content" maxHeight="800.0" maxWidth="700.0" minHeight="800.0" minWidth="700.0"
            styleClass="background" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/"
            fx:controller="fi.metropolia.expensetracker.controller.BudgetController">
    <children>
        <Label fx:id="total" alignment="CENTER" contentDisplay="CENTER" layoutX="224.0" layoutY="10.0"
               styleClass="titleText" text="Total:" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="50.0"/>
        <Button fx:id="back" layoutX="116.0" layoutY="88.0" mnemonicParsing="false" onAction="#backToMain"
                prefHeight="39.0" prefWidth="75.0" text="Back" textAlignment="CENTER" AnchorPane.leftAnchor="20.0"
                AnchorPane.rightAnchor="570.0" AnchorPane.topAnchor="15.0"/>
        <Button fx:id="shared" alignment="CENTER" layoutX="554.0" layoutY="17.0" mnemonicParsing="false"
                text="Shared Budgets" AnchorPane.leftAnchor="490.0" AnchorPane.rightAnchor="20.0"
                AnchorPane.topAnchor="15.0"/>
        <Label fx:id="active" alignment="CENTER" layoutX="148.0" layoutY="72.0" styleClass="budgetText"
               text="Currently active budget:" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="100.0">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label fx:id="activeBudget" alignment="CENTER" layoutX="213.0" layoutY="117.0" styleClass="activeBudget"
               text="No active budget" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="130.0">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <AnchorPane layoutX="75.0" layoutY="140.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="350.0"
                    AnchorPane.topAnchor="160.0">
            <children>
                <ComboBox fx:id="selectTopic" layoutX="80.0" layoutY="59.0" onAction="#onSelectTopic"
                          promptText="Budget" styleClass="combo-box" AnchorPane.leftAnchor="40.0"
                          AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="5.0"/>
                <AnchorPane fx:id="newBudget" visible="false" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                            AnchorPane.topAnchor="55.0">
                    <children>
                        <TextField fx:id="budgetName" promptText="Name:" styleClass="button"
                                   AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                                   AnchorPane.topAnchor="5.0"/>
                        <TextField fx:id="addBudget" promptText="Amount:" styleClass="button"
                                   AnchorPane.leftAnchor="55.0" AnchorPane.rightAnchor="55.0"
                                   AnchorPane.topAnchor="55.0"/>
                        <Button fx:id="addBtn" alignment="CENTER" mnemonicParsing="false" onAction="#addToBudget"
                                text="Add" AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="70.0"
                                AnchorPane.topAnchor="105.0"/>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="editBudget" visible="false" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                            AnchorPane.topAnchor="55.0">
                    <children>
                        <TextField fx:id="modifyName" promptText="Name:" styleClass="button"
                                   AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                                   AnchorPane.topAnchor="5.0"/>
                        <TextField fx:id="modifyAmount" promptText="Amount:" styleClass="button"
                                   AnchorPane.leftAnchor="55.0" AnchorPane.rightAnchor="55.0"
                                   AnchorPane.topAnchor="50.0"/>
                        <Button fx:id="modifyBtn" alignment="CENTER" mnemonicParsing="false" onAction="#modifyBtnClick"
                                text="Modify" AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="70.0"
                                AnchorPane.topAnchor="95.0"/>
                        <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteBtnClick" text="Delete"
                                AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0"
                                AnchorPane.topAnchor="160.0"/>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="modifyBudget" prefHeight="200.0" prefWidth="200.0" visible="false"
                            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="55.0">
                    <children>
                        <Button fx:id="modify" mnemonicParsing="false" onAction="#modifyBudget" text="Modify"
                                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="10.0"/>
                        <Button fx:id="delete" mnemonicParsing="false" onAction="#deleteBtnClick" text="Delete"
                                AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0"/>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="budgetPane" visible="false" AnchorPane.leftAnchor="375.0" AnchorPane.rightAnchor="20.0"
                    AnchorPane.topAnchor="160.0">
            <children>
                <ComboBox fx:id="expenseCombo" prefHeight="39.0" prefWidth="296.0" promptText="Constant expenses"
                          styleClass="button" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                          AnchorPane.topAnchor="5.0"/>
                <Button fx:id="ConstExpenseBtn" alignment="CENTER" mnemonicParsing="false" onAction="#removeBtn"
                        text="Remove from budget" wrapText="true" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="60.0"/>
            </children>
        </AnchorPane>
        <AnchorPane AnchorPane.leftAnchor="375.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="340.0">
            <children>
                <Label fx:id="show" alignment="CENTER" styleClass="smallHeader" text="Showing statistics from:"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="selectedTimeFrame" layoutX="78.0" layoutY="140.0" promptText="All time"
                          styleClass="button" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0"
                          AnchorPane.topAnchor="30.0"/>
            </children>
        </AnchorPane>
        <BarChart fx:id="barStats" layoutX="44.0" layoutY="400.0" onMouseClicked="#onChangeChartClick"
                  styleClass="button" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="50.0"
                  AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="420.0">
            <xAxis>
                <CategoryAxis side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </BarChart>
        <PieChart fx:id="pieStats" layoutX="35.0" layoutY="396.0" onMouseClicked="#onChangeChartClick"
                  styleClass="button" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="50.0"
                  AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="420.0"/>
    </children>
</AnchorPane>
