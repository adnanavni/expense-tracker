<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="content" maxHeight="800.0" maxWidth="700.0" minHeight="800.0" minWidth="700.0"
            styleClass="background" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fi.metropolia.expensetracker.controller.IncomeController">
    <children>
        <Label fx:id="income" alignment="CENTER" layoutX="107.0" layoutY="30.0" styleClass="header" text="Income"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0"/>
        <Button fx:id="back" layoutX="116.0" layoutY="88.0" mnemonicParsing="false" onAction="#backToMain"
                prefHeight="39.0" prefWidth="75.0" text="Back" textAlignment="CENTER" AnchorPane.leftAnchor="20.0"
                AnchorPane.rightAnchor="570.0" AnchorPane.topAnchor="15.0"/>
        <AnchorPane prefHeight="295.0" prefWidth="427.0" AnchorPane.leftAnchor="157.0" AnchorPane.rightAnchor="157.0"
                    AnchorPane.topAnchor="65.0">
            <children>
                <Label fx:id="payday" alignment="CENTER" layoutX="45.0" layoutY="136.0" styleClass="smallHeader"
                       text="Select pay day" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="140.0"/>
                <DatePicker fx:id="selectedDate" prefHeight="26.0" prefWidth="150.0" styleClass="button"
                            AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="165.0"/>
                <TextField fx:id="addMonthSalary" alignment="CENTER" styleClass="button" AnchorPane.leftAnchor="100.0"
                           AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="25.0"/>
                <TextField fx:id="addTaxRate" prefHeight="44.0" prefWidth="207.0" promptText="\%" styleClass="button"
                           AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="92.0"/>
                <Button fx:id="addBtn" layoutX="135.0" layoutY="212.0" mnemonicParsing="false"
                        onAction="#onSalaryAddClick" prefHeight="43.0" prefWidth="145.0" text="Add"
                        AnchorPane.leftAnchor="130.0" AnchorPane.rightAnchor="130.0" AnchorPane.topAnchor="210.0"/>
                <Label fx:id="addMonth" alignment="CENTER" styleClass="smallHeader" text="Add monthly salary"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                <Label fx:id="addTax" alignment="CENTER" styleClass="smallHeader" text="Add tax rate"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="68.0"/>
                <CheckBox fx:id="mandatoryTaxes" alignment="CENTER" contentDisplay="CENTER" layoutX="292.0"
                          layoutY="92.0" mnemonicParsing="false" prefHeight="44.0" prefWidth="46.0" styleClass="button"
                          visible="false" AnchorPane.leftAnchor="290.0" AnchorPane.rightAnchor="40.0"
                          AnchorPane.topAnchor="92.0"/>
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="304.0" prefWidth="512.0" styleClass="secondBackground" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="380.0">
            <children>
                <Label fx:id="history" alignment="CENTER" layoutX="107.0" layoutY="1.0" prefHeight="27.0"
                       prefWidth="129.0" styleClass="budgetText" text="Salary history" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                <ListView fx:id="salaryHistory" layoutX="25.0" layoutY="37.0" opacity="0.85" prefHeight="255.0"
                          prefWidth="467.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="25.0"
                          AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="130.0"/>
                <ComboBox fx:id="monthsCombo" layoutX="193.0" layoutY="357.0" onAction="#calculateMonths"
                          prefHeight="12.0" prefWidth="165.0" promptText="Month" styleClass="button"
                          AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="60.0"/>
                <Label fx:id="check" alignment="CENTER" layoutX="182.0" layoutY="326.0" styleClass="smallHeader"
                       text="Check salary amount of the month:" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="35.0"/>
                <Label fx:id="salaryComing" alignment="CENTER" layoutX="175.0" layoutY="403.0" prefHeight="18.0"
                       prefWidth="201.0" styleClass="smallHeader" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="102.0"/>
            </children>
        </AnchorPane>
        <Button fx:id="hourSalary" layoutX="220.0" layoutY="338.0" mnemonicParsing="false" onAction="#toDaySalaryView"
                prefHeight="44.0" prefWidth="156.0" text="Hourly salary" AnchorPane.leftAnchor="250.0"
                AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="330.0"/>
    </children>

</AnchorPane>
